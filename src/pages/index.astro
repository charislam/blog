---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<main>
			<h1>Charis Lam</h1>
			<nav>
				<a href="https://github.com/charislam" target="_blank" rel="noreferrer noopener">GitHub</a>
				<a href="https://linkedin.com/in/charis-ty-lam" target="_blank" rel="noreferrer noopener">LinkedIn</a>
			</nav>
			<section id="blog">
				<h2>Blog</h2>
					<ul class="blog-list">
						{
							posts.map((post) => (
								<li class="blog-listing">
									<a class="blog-title" href={`/${post.slug}/`}>
										<h3>{post.data.title}</h4>
									</a>
									<p class="blog-description">
										{post.data.description}
									</p>
								</li>
							))
						}
					</ul>
			</section>
		</main>
	</body>
</html>

<style>
	nav {
		--gap: 1rem;
		margin-block-end: 4rem;
		display: flex;
		gap: var(--gap);

		a {
			color: inherit;
			text-decoration: none;
			transition: color 300ms;

			&:hover {
				color: var(--accent);
			}

			&:not(:first-of-type)::before {
				content: '/';
				margin-inline-end: var(--gap);
				color: rgb(var(--gray));
			}
		}
	}

	#blog > h2 {
		margin-block-end: 2rem;
	}

	.blog-list {
		list-style-type: none;
		padding-inline-start: 0;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.blog-title {
		font-size: 1.5rem;
		font-weight: 500;
		color: rgb(var(--gray-dark));
		text-underline-offset: 0.5em;

		&:hover {
			color: var(--accent);
		}

		> h3 {
			color: inherit;
			font-size: inherit;
			font-weight: inherit;
		}
	}

	.blog-description {
		font-size: 1.2rem;
		color: rgb(var(--gray));
	}
</style>
